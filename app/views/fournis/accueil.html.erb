            <h3 class='card-title  mt-4'>Rajout et gestion des fournisseurs</h3>
        </div>

        <div class="card-body">
          <%= link_to "Page des fournisseurs", fournis_path, class: "btn btn-lg btn-outline-success mx-2 my-2 no-underline" %>
