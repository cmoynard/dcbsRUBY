            <h3 class='card-title  mt-4'>Envoie des mails aux fournisseurs</h3>
        </div>

        <div class="card-body">
          <%= link_to "Envoie d'email SAV", email_path , class: "btn btn-lg btn-outline-success mx-2 my-2 no-underline"%>
