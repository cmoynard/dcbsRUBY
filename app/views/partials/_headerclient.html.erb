<header class="p-3 text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <% if request.path == "/" %>
            <li><%= link_to "Accueil", root_path, class: "no-underline nav-link px-2 disabled"%></li>
            <li><%= link_to "Demande SAV", new_savform_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><a href="#" class="nav-link px-2 text-white">Contact</a></li>
            <li><a href="https://www.dcbs.fr/" class="nav-link px-2 text-white">Site principal</a></li>
          <% elsif request.path == "/savforms/new" %>
            <li><%= link_to "Accueil", root_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Demande SAV", new_savform_path, class: "no-underline nav-link px-2 disabled"%></li>
            <li><a href="#" class="nav-link px-2 text-white">Contact</a></li>
            <li><a href="https://www.dcbs.fr/" class="nav-link px-2 text-white">Site principal</a></li>
          <% else %>
            <li><%= link_to "Accueil", root_path, class: "no-underline nav-link px-2 disabled"%></li>
            <li><%= link_to "Demande SAV", new_savform_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><a href="#" class="nav-link px-2 text-white">Contact</a></li>
            <li><a href="https://www.dcbs.fr/" class="nav-link px-2 text-white">Site principal</a></li>
          <% end %>
        </ul>

        <div class="text-end">
          <% if request.path != "/" %>
          <button type="button" class="btn btn-outline-danger me-2"><%=link_to "Retour", root_path, class:  "no-underline"%></button>
          <% else %>
          <button type="button" class="btn btn-outline-light me-2"><%=link_to "Connexion Admin", accadmin_path, class:  "no-underline"%></button>
          <% end %>
        </div>
      </div>
      <div class="mt-3" style='border-top: 1px solid #3E4145; width: 70%; margin:0 auto'></div>
    </div>
</header>