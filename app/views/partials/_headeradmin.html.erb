<header class="p-3 text-white">
    <div class="container-fluid">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <% if request.path == "/accadmin" %>
            <li><%= link_to "Accueil Admin", accadmin_path, class: "no-underline nav-link px-2 disabled"%></li>
            <li><%= link_to "Fournisseurs", fournis_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Liste SAV", savforms_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Emails automatiques", email_path, class: "no-underline nav-link px-2 text-white"%></li>
          <% elsif request.path.include? "/fournis" %>
            <li><%= link_to "Accueil Admin", accadmin_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Fournisseurs", fournis_path, class: "no-underline nav-link px-2 disabled"%></li>
            <li><%= link_to "Liste SAV", savforms_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Emails automatiques", email_path, class: "no-underline nav-link px-2 text-white"%></li>
          <% elsif request.path == "/savforms" %>
            <li><%= link_to "Accueil Admin", accadmin_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Fournisseurs", fournis_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Liste SAV", savforms_path, class: "no-underline nav-link px-2 disabled"%></li>
            <li><%= link_to "Emails automatiques", email_path, class: "no-underline nav-link px-2 text-white"%></li>
          <% elsif request.path == "/email" %>
            <li><%= link_to "Accueil Admin", accadmin_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Fournisseurs", fournis_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Liste SAV", savforms_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Emails automatiques", email_path, class: "no-underline nav-link px-2 disabled"%></li>
          <% else %>
            <li><%= link_to "Accueil Admin", accadmin_path, class: "no-underline nav-link px-2 text-secondary"%></li>
            <li><%= link_to "Fournisseurs", fournis_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Liste SAV", savforms_path, class: "no-underline nav-link px-2 text-white"%></li>
            <li><%= link_to "Emails automatiques", email_path, class: "no-underline nav-link px-2 text-white"%></li>
          <% end %>
        </ul>

        <div class="text-end">
          <% if request.path != "/accadmin" %>
            <button class="btn btn-outline-danger"><%= link_to "Retour Admin", accadmin_path, class: "no-underline"%></button>
          <% else %>
            <button class="btn btn-outline-danger"><%= link_to "Retour Client", root_path, class: "no-underline"%></button>
          <% end %>
        </div>
      </div>
      <div class="mt-3" style='border-top: 1px solid #3E4145; width: 70%; margin:0 auto'></div>
    </div>
</header>
