<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous" ></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous" ></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous" ></script>

<%= render partial: 'partials/headerclient'%>

<div style="text-align: center;">
  <h1 id="title" class="display-2 mb-1">DCBS SAV</h1>
  <h4 id="title" class="display-6 mb-4">Votre demande de service après vente chez DCBS</h4>
</div>

<div class="card container col-md-6 mb-4" style="background-color: rgb(40, 45, 58); border: 2px solid white;">
  <div class="card-head" style="text-align: center;">
    <h3 class='card-title text-white mt-4'>Veuillez compléter ce formulaire.</h3>
    <h6 class='card-title text-white mt-1'>Les champs dotés d'un astérix (*) sont obligatoires.</h6>
  </div>
  
  <div class="card-body">
      <%= form_with model: @savform do |form| %>
          <div class="row">
            <div class="col-md-6"> 
              <label class="form-label text-white m-0" for="input-nom">Nom*</label>
              <%= form.text_field :nom, class:"form-control mb-3", id: "input-nom" %>
              <% @savform.errors.full_messages_for(:nom).each do |message| %>
                <%= message %>
              <% end %>
            </div>
            <div class="col-md-6">  
              <label class="form-label text-white m-0" for="input-prenom">Prénom*</label>
              <%= form.text_field :prenom, class:"form-control mb-3", id:"input-prenom" %>
              <% @savform.errors.full_messages_for(:prenom).each do |message| %>
                <%= message %>
              <% end %>
            </div>
          </div>
          
          <label class="form-label text-white m-0" for="input-mail">Email*</label>
          <%= form.text_field :mail, class:"form-control mb-3", id:"input-mail" %>
          <% @savform.errors.full_messages_for(:mail).each do |message| %>
            <%= message %>
          <% end %>

          <label class="form-label text-white m-0" for="input-adresse">Adresse*</label>
          <%= form.text_field :adresse, class:"form-control mb-3", id:"input-adresse"%>
          <% @savform.errors.full_messages_for(:adresse).each do |message| %>
            <%= message %>
          <% end %>

          <div class="row">
            <div class="col-md-6">
              <label class="form-label text-white m-0" for="input-ville">Ville*</label>
              <%= form.text_field :ville, class:"form-control mb-3", id:"input-ville"%>
              <% @savform.errors.full_messages_for(:ville).each do |message| %>
                <%= message %>
              <% end %>
            </div>
            <div class="col-md-6">
              <label class="form-label text-white m-0" for="input-postal">Code postal*</label>
              <%= form.text_field :postal, class:"form-control mb-3", id:"input-postal" %>
              <% @savform.errors.full_messages_for(:postal).each do |message| %>
                <%= message %>
          <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <label class="form-label text-white m-0" for="input-numCommande">Numéro de commande*</label>
              <%= form.text_field :numCommande, class:"form-control mb-3", id:"input-numCommande" %>
              <% @savform.errors.full_messages_for(:numCommande).each do |message| %>
                <%= message %>
              <% end %>
            </div>
            <div class="col-md-6">
              <label class="form-label text-white m-0" for="input-Tel">Numéro de téléphone*</label>
              <%= form.text_field :numTel, class:"form-control mb-3", id:"input-numTel"%>
              <% @savform.errors.full_messages_for(:numTel).each do |message| %>
                <%= message %>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6" style="item-align: center;">
              <label class="form-label text-white m-0" for="input-fournisseur">Fournisseur concerné*</label>
              <%= form.select :fournisseur, @fournis.map { |frn| [frn.nom_f] ; }, {}, {class: "form-control mb-3", id:"input-fournisseur"} %>

              <label class="form-label text-white m-0 mb-3" for="input-facture">Facture du produit*</label>
              <%= form.file_field :facture, id:"simpletext", class: "form-control-file mb-3 text-white", onchange: "readURL(this);", id: "input-facture" %>
            </div>
            <div class="col-md-6">
              <label class="form-label text-white m-0" for="input-contenue">Votre problème*</label>
              <%= form.text_area :contenue, rows:"4", cols:"25", class: "form-control mb-3", id: "input-contenue" %>
              <% @savform.errors.full_messages_for(:contenue).each do |message| %>
                <%= message %>
              <% end %>
            </div>
          </div>

          <div style="text-align: center">
          <button class="btn btn-lg btn-outline-success my-3"><% form.submit %>Envoyer le formulaire</button>
          </div>

      <% end %>
  </div>
</div>

<%= render partial: 'partials/footer' %>