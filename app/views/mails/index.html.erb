<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous" ></script>

<% if admin_signed_in? %>

<%= render partial: 'partials/headeradmin'%> <!-- Page partie admin pour envoyer un mail au fournisseur selectionné -->

<div style="text-align: center;">
  <h1 id="title" class="display-1 my-4">Envoyer un mail</h1>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card container col-md-8 my-4" style="background-color: rgb(40, 45, 58); border: 2px solid white;">
            <div class="card-head" style="text-align: center;">
                <h3 class='card-title text-white mt-4'>Selectionner la commande à envoyer</h3>
                <h6 class='card-title text-white mb-4'>(Le mail est envoyé au fournisseur précisé dans la demande)</h6>
            </div>

            <div class="card-body" style="text-align: center;">
                <%= form_with url: "/envoiemail", method: :post do |f| %>

                    <%= f.label :commande, id:"simpletext" %><br>
                    <%= f.select :numcom, @savforms.map { |svf| [svf.numCommande, svf.id] } %>

                    <br>

                    <button class="btn btn-lg btn-outline-success my-3"><% f.submit %>Envoyer</button>

                    <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

<div class="fixed-bottom">
<%= render partial: "partials/footer" %>
</div>

<% else %>
    <script>
      alert("Vous n'avez pas accès.");
      location.href="http://127.0.0.1:3000"; // redirection vers la page d'accueil si l'admin n'est pas connecté
    </script>
<% end %>