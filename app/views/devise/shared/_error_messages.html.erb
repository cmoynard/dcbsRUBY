<% if resource.errors.any? %> <!-- si il y a des erreurs -->
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved", 
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase) 
       %>
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %> <!-- affichage des erreurs -->
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
